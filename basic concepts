 func.__doc__
 
 #reverse a string
 string="hello"
print(string[::-1])


#print a sequence
for i in range(1,6):
 print(i)                  [1/ 2 /3]

for i in range(1,6):
 print(i,end="")            [12345]
 
 for i in range(1,6):
   print(i,sep="  ",end=" ")      [1 2 3 4 5]
 
##program to diaplay extension of filename specified
fname=input("enter filename:")
lst=fname.split('.')
print(lst[-1])

#program to compute(n+nn+nnn)(4+44+444)
a = int(input("Input an integer : "))
n1 = int( "%s" % a )
n2 = int( "%s%s" % (a,a) )
n3 = int( "%s%s%s" % (a,a,a) )
print (n1+n2+n3)
