b,a=a,b
print(a)
print(b)

#string formatting
x=10 
printer=HP

print("I just printed %s pages using %s printer"%(x,printer)

print("I just printed {0} pages using {1} printer".format(x,printer))

print(f"I just printed {x} pages using {printer} printer")

#doc string, must be specified at the first line of function
