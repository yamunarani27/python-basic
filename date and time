#program to compute difference between two dates
from datetime import date
f_date = date(2014, 7, 2)
l_date = date(2014, 7, 11)
delta = l_date - f_date
print(delta.days)

#program to halt for a given time:sleep time
 import time
  for i in range (1,5):
